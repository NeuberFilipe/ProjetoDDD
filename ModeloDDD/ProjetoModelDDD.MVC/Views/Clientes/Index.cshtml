@model IEnumerable<ProjetoModelDDD.MVC.ViewModels.ClienteViewModel>

<hr />
<p>
    @Html.ActionLink("Clientes Especiais", "Especiais", null, new { @class = "btn btn-success btn-xs" })
</p>

@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Filtrar" class="btn btn-defalut btn-xs" />
        @Html.TextBox("SearchString", null, new { @class = "btn btn-info btn-xs" })
    </p>
}
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ClienteId } , new { @class = "btn btn-success btn-xs" }) 
                @Html.ActionLink("Detalhes", "Details", new { id = item.ClienteId }, new { @class = "btn btn-info btn-xs" }) 
                @Html.ActionLink("Deletar", "Delete", new { id = item.ClienteId }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary btn-xs" })
</p>
